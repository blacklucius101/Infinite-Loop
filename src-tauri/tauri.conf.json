{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Infinite Jukebox",
  "version": "0.1.0",
  "identifier": "com.infinite.jukebox",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Infinite Jukebox",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/icon.ico"
    ]
  }
}
